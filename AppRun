#!/bin/zsh

PROG=tristansClock

APP_DIR=`dirname "$0"`
APP_DIR=`cd "$APP_DIR";pwd`
export APP_DIR

APP_NAME="`basename $APP_DIR`"
EXEC_NAME="`basename $0`"

if [[ -e $APP_DIR/dist/build/tristansClock/tristansClock ]] || xterm -e "cd $APP_DIR; cabal configure && cabal build || read blah"

$APP_DIR/dist/build/tristansClock/tristansClock 
